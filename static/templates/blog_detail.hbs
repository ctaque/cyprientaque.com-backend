
{{#*inline "page"}}
<div class="pageWrap">
    <div class="page">
        <div class="article">
            <div class="header">
                {{#if article.primary_image }}
                    <img class="banner" src={{article.primary_image.w1500_object_url}}>
                {{/if }}
                <div class="gradient"></div>
                <div class="page-title">
                    <a class="back-link" href="/blog">
                        <svg t="1629288340847" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="1172" width="40" height="40">
                            <path d="M892.5 446.2H284l268-268c24.9-24.9 24.9-65.5 0-90.4-24.9-24.9-65.5-24.9-90.4 0L84.4 465c-24.9 24.9-24.9 65.5 0 90.4 2 2 4.1 3.8 6.2 5.5l371.6 371.6c24.9 24.9 65.5 24.9 90.4 0 24.9-24.9 24.9-65.5 0-90.4l-268-268h607.8c35.2 0 63.9-28.8 63.9-63.9 0.1-35.2-28.7-64-63.8-64z" fill="rgba(255, 255, 255, 0.95)" p-id="1173"></path>
                        </svg>
                    </a>
                    <div class="date-title-outer">
                        <div class="date">
                            <span class="day">{{format_date article.created_at "%d"}}</span>
                            <span class="month">{{format_date article.created_at "%b"}}</span>
                            <span class="year">{{format_date article.created_at "%Y"}}</span>
                        </div>
                        <h1 class="title">
                            <div class="date-views">
                                <div class="date-views-inner">
                                    <img src="/static/svg/eye.svg"/>
                                    <span>{{format_views_count article.views_count}}</span>
                                </div>
                            </div>
                            {{article.title}}
                        </h1>
                    </div>
                </div>
            </div>
            {{#if article.tags_list}}
            <h3>Tags</h3>
            <div class="tags-list">
                {{#each article.tags_list}}
                    <a href="/blog?tag={{this}}" class="tag">{{this}}</a>
                {{/each}}
            </div>
            <div class="separator-h"></div>
            {{/if}}
            <div class="">
                <div class="content">
                    {{render_markdown article.content}}
                </div>
            </div>
            <div class="footer">
                {{#if article.updated_at}}
                    <span class="">Last edited : {{format_date article.updated_at "%Y-%m-%d %H:%M:%S"}}</span>
                {{/if }}
                <div id="addLike"></div>
            </div>
            <script>
            var app = Elm.AddLike.init({
                node: document.getElementById('addLike'),
                flags: {
                    views_count: {{article.likes_count}},
                    project_id: {{article.id}}
                }
            });
            </script>
        </div>
    </div>
</div>
{{/inline}}

{{~> (base)~}}
